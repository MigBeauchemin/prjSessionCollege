<div style="height: 25vh;  overflow-y:scroll;" class="tableInfoEtudiant">
<div class="titleResultat">
    <h4>Les Étudiants</h4>
</div>
<table class="table" id="resultTable">
    <tr>
        <th hidden>Id</th>
        <th hidden>StudentId</th>
        <th>Étudiant</th>
        <th>Note</th>
        <th></th>
    </tr>

    @foreach (var student in Model.dataCourseSemesterStudent)
    {
        <tr>
            <td hidden> @student.Id</td>
            <td hidden> @student.StudentId</td>
            <td>@student.FirstName @student.LastName</td>
            <td class="changerNote">@student.Grade</td>
            <td><button class="removeStudent" data="@student.StudentId" id="boutonRemoveStudent">Retirer du cours</button></td>
        </tr>
    }
</table>
</div> 

<div style="height: 15vh;  overflow-y:scroll;" class="tableInfoProf">
<div class="titleProfs">
    <h4>Le Professeur du Cours</h4>
</div>
<table class="table" id="resultProf">
    <tr>
        <th hidden>Id</th>
        <th>Professeur</th>
        <th></th>
        <th>Horaire</th>
        <th>Local</th>

    </tr>

        <tr>
            <td hidden> @Model.teacherInfo.Id</td>
            <td hidden> @Model.teacherInfo.TeacherId</td>
            <td>@Model.teacherInfo.TeacherFirstName @Model.teacherInfo.TeacherLastName</td>
            <td><button class="modifyTeacher" id="boutonModifyTeacher">Modifier</button></td>
            <td>@Model.teacherInfo.Schedule</td>
            <td>@Model.teacherInfo.Location</td>
                
        </tr>
       

       
    </table>
</div>
