<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - prjSessionCollege</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/prjSessionCollege.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">prjSessionCollege</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <button id="logoutBtn" class="btn btn-danger" style="display:none;">Déconnexion</button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container footerBox">
            &copy; 2023 - prjSessionCollege MIGUEL BEAUCHEMIN et ERIK MARCOTTE- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script src="~/prjSessionCollege.js" asp-append-version="true"></script>
        <script>
            $(document).ready(function () {
                if (sessionStorage.getItem("userRole") == "Teacher") {
                    $("#logoutBtn").show();
                    $("#teacherBox").show();
                    $("#studentBox").hide();
                }
                else if (sessionStorage.getItem("userRole") == "Student") {
                    $("#logoutBtn").show();
                    $("#teacherBox").hide();
                    $("#studentBox").show();
                }
                else {
                    $("#logoutBtn").hide();
                    $("#teacherBox").hide();
                    $("#studentBox").hide();
                }
            
                $("#logoutBtn").click(function () {
                    $.ajax({
                        type: "Get",
                        url: "/Home/Logout",
                        success: function (data) {
                            console.log(data);
                            window.location.href = "/Home/Index";
                        },
                        error: function (response) {
                            alert("error : " + response.responseText);
                        }
                    });
                });
            });
        </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
